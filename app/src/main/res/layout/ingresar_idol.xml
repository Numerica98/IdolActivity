<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_titulo_ingresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INGRESAR DATOS DE IDOL"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/ed_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre del idol"/>

    <EditText
        android:id="@+id/ed_compañia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Compañia del idol"/>

    <EditText
        android:id="@+id/ed_estatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Estatura del idol"/>

    <Button
        android:id="@+id/bt_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar idol"/>

</LinearLayout>